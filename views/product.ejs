<!DOCTYPE html>
<html lang="en">
<head>

    <%-include ('partials/header.ejs') %>

</head>
<body>

<%-include ('partials/nav.ejs') %>
   


<div class="container">
   
    <div class="row product-display">
        <%if(product){  %>           
        
        <div class="col col-12 col-md-6 ">
            
                <img src="<%= product.image.url%>" class="product-img " alt="Error Loading image">
                <form action="/cart" method="post">
                    <div class="label">
                    <label for="quantity" > Quantity: </label>
                    <input type="number" id="quantity" value="1" min="1" class="form-control mb-2 amount">
                    </div>
                    <input type="submit" value="Add to cart" class="btn btn-primary">
                </form>
            </div>            
            
       
        <div class="col col-12 col-md-6  product-info">
            <h3><%=product.name%> </h3>
            <h4>Price : <%=product.price%> $</h4>
            <p><%=product.description%></p>
            
        </div>      
        


        <%} else {%>
            <div class="alert alert-danger">
                <p> There is no product matches the id </p>
            </div>

        <%}%>
    </div>
</div>
</body>


<%-include ('partials/footer.ejs') %>

</html>